// tag::newlines[]
FunctionCallExpression {
    @projection FunctionCallExpression
        [+
        CALL ${self.functionDefinition} (  )
        ]
    @trigger "function"
}
// end::newlines[]
// tag::lists[]
EntUnit {
    @projection EntUnit
        [
        model ${self.name} {
        entities:
            ${self.entities
                @vertical
                @terminator [\n\n]
            }
        model wide functions:
            ${self.functions @horizontal @separator [; ] }
        }
        ]
}
// end::lists[]
