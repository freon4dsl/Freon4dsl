concept ScopeConceptDef {
    reference classifierRef: FreConcept;
    namespaceAddition?: FreNamespaceAddition;
    alternativeScope?: FreAlternativeScope;
}

concept FreNamespaceAddition {
    expressions: FretExp[];
}

concept FreAlternativeScope {
    expression: FretExp;
}

