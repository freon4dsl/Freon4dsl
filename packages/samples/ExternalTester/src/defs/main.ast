language ExternalTester

model ExternalModel {
    parts: ExternalUnit[];
    more: ExternalUnit2[];
}

modelunit ExternalUnit {
    content: AA;
    toBeReferenced: CC[];
    file-extension = "ext";     // the file extension used by the parser
}

modelunit ExternalUnit2 {
    content: conceptWithPrims;
    content2: conceptWithParts;
    content3: conceptWithRefs;
    file-extension = "ext2";     // the file extension used by the parser
}

concept AA  {
    name: identifier;
    // the possibilities for primitive properties
    stringProp: string;
//    stringList: string[];
    numberProp: number;
//    numberList: number[];
    booleanProp: boolean;
//    booleanList: boolean[];
    // properties with concept as type
    conceptProp: BB;
    conceptList: BB[];
    reference referenceProp: CC;
    reference referenceList: CC[];
    // properties with interface as type
    interfaceProp: DD;
    interfaceList: DD[];
    reference intfReferenceProp: DD;
    reference intfReferenceList: DD[];
}

concept BB {
    name: identifier;
    // the possibilities for primitive properties
    stringProp: string;
//    stringList: string[];
    numberProp: number;
//    numberList: number[];
    booleanProp: boolean;
//    booleanList: boolean[];
    // properties with concept as type
    conceptProp?: BB;
    conceptList: BB[];
    reference referenceProp: CC;
    reference referenceList: CC[];
    // properties with interface as type
    interfaceProp: DD;
    interfaceList: DD[];
    reference intfReferenceProp: DD;
    reference intfReferenceList: DD[];
    // properties with limited concept as type
    limitedProp: ZZ;
    limitedList: ZZ[];
}

concept CC {
    name: identifier; // so that this concept can be used as reference
    numberProp: number;
}

limited ZZ {
    name: identifier;
    // the possibilities for primitive properties
    ZZprop1: string;
//    ZZprop2: string[];
    ZZprop3: number;
//    ZZprop4: number[];
    ZZprop5: boolean;
//    ZZprop6: boolean[];
    ZZinstance1 = { name: "ZZinstance1", ZZprop1: "sometext" }
    ZZinstance2 = { name: "ZZinstance2", ZZprop1: "sometext" }
    ZZinstance3 = { name: "ZZinstance3", ZZprop1: "sometext" }
}

interface DD {
    name: identifier;
    // the possibilities for primitive properties
    DDprop1: string;
//    DDprop2: string[];
    DDprop3: number;
//    DDprop4: number[];
    DDprop5: boolean;
//    DDprop6: boolean[];
}

concept conceptWithPrims  {
    name: identifier;
    // the possibilities for primitive properties
    stringProp: string;
//    stringList: string[];
    numberProp: number;
//    numberList: number[];
    booleanProp: boolean;
}

concept conceptWithParts {
    name: identifier;
    conceptProp: CC;
    conceptList: CC[];
}

concept conceptWithRefs {
    name: identifier;
    reference referenceProp: CC;
    reference referenceList: CC[];
}
