{
	"publishConfig": {
		"access": "public"
	},
	"name": "@freon4dsl/weblib-flowbite",
	"version": "2.0.0-beta.2",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/freon4dsl/Freon4dsl.git"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"svelte": "./dist/index.js",
	"scripts": {
		"clean": "rm -rf node_modules/",
		"dev": "vite dev",
		"build": "npm run styles && vite build && npm run prepack && publint",
		"build-dev": "vite build && npm run prepack",
		"build-release": "npm run build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package",
		"publint": "publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"errors-only": "svelte-check --threshold error --tsconfig ./tsconfig.json",
		"install-local": "npm install --registry http://localhost:4873",
		"republish-local": "npm run unpublish-local && npm run publish-local",
		"release": "npm publish",
		"publish-local": "npm publish --registry http://localhost:4873 --tag local",
		"unpublish-local": "npm unpublish --force --registry http://localhost:4873",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"styles": "cross-env NODE_ENV=production npx @tailwindcss/cli -i src/lib-only.css -o src/lib/styles/lib-styles.css --minify"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.31.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.17.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.1.4",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"flowbite": "3.1.2",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.1.2",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^4.1.4",
		"vite": "^6.0.11",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"@freon4dsl/core": "2.0.0-beta.2",
		"@freon4dsl/core-svelte": "2.0.0-beta.2",
		"flowbite-svelte": "1.7.1",
		"flowbite-svelte-icons": "2.2.1",
		"mobx": "^6.13.6",
		"svelte": "^5.25.3"
	}
}
