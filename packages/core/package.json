{
  "name": "@freon4dsl/core",
  "version": "1.1.0-beta.3",
  "description": "The core part of the Freon library, which enables you to build editors for the web",
  "publishConfig": {
    "access": "public"
  }, 
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freon4dsl/Freon4dsl.git"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./ast": {
      "types": "./dist/ast/index.d.ts",
      "import": "./dist/ast/index.js"
    },
    "./ast-utils": {
      "types": "./dist/ast-utils/index.d.ts",
      "import": "./dist/ast-utils/index.js"
    },
    "./editor": {
      "types": "./dist/editor/index.d.ts",
      "import": "./dist/editor/index.js"
    },
    "./environment": {
      "types": "./dist/environment/index.d.ts",
      "import": "./dist/environment/index.js"
    },
    "./language": {
      "types": "./dist/language/index.d.ts",
      "import": "./dist/language/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "import": "./dist/logging/index.js"
    },
    "./reader": {
      "types": "./dist/reader/index.d.ts",
      "import": "./dist/reader/index.js"
    },
    "./scoper": {
      "types": "./dist/scoper/index.d.ts",
      "import": "./dist/scoper/index.js"
    },
    "./searchers": {
      "types": "./dist/searchers/index.d.ts",
      "import": "./dist/searchers/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    },
    "./stdlib": {
      "types": "./dist/stdlib/index.d.ts",
      "import": "./dist/stdlib/index.js"
    },
    "./typer": {
      "types": "./dist/typer/index.d.ts",
      "import": "./dist/typer/index.js"
    },
    "./util": {
      "types": "./dist/util/index.d.ts",
      "import": "./dist/util/index.js"
    },
    "./validator": {
      "types": "./dist/validator/index.d.ts",
      "import": "./dist/validator/index.js"
    },
    "./writer": {
      "types": "./dist/writer/index.d.ts",
      "import": "./dist/writer/index.js"
    },
    "./change-manager": {
      "types": "./dist/change-manager/index.d.ts",
      "import": "./dist/change-manager/index.js"
    },
    "./interpreter": {
      "types": "./dist/interpreter/index.d.ts",
      "import": "./dist/interpreter/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build-dev": "tsc",
    "build-release": "tsc",
    "clean": "rm -rf node_modules/ && rm -rf dist/",
    "cleanup": "bash ../../scripts/cleanup.sh",
    "format": "prettier --write .",
    "test": "vitest run",
    "release": "npm publish",
    "publish-local": "npm publish --registry http://localhost:4873",
    "unpublish-local": "npm unpublish --force --registry http://localhost:4873",
    "republish-local": "npm run unpublish-local && npm run publish-local"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "@lionweb/validation": "0.6.2",
    "@lionweb/repository-client": "0.2.2",
    "mobx": "^6.12.3",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.6.3"
  }
}
