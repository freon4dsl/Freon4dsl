{
  "private": true,
  "name": "@projectit/playground",
  "version": "0.0.5",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/joswarmer/ProjectIt.git"
  },
  "scripts": {
    "start":        "webpack-dev-server -d --history-api-fallback --hot --inline --progress --colors --port 3000 --open",
    "calculator":   "ts-node ../meta/src/commandline/projectit all -d src/calculator/defs -o src/calculator",
    "example": 	    "ts-node ../meta/src/commandline/projectit all -d src/example/defs -o src/example",
    "example-watch":"ts-node ../meta/src/commandline/projectit -vw all -d src/example/defs -o src/example",
    "HDML":         "ts-node ../meta/src/commandline/projectit -v all -d src/HDML/defs -o src/HDML",
    "HDML-watch":    "ts-node ../meta/src/commandline/projectit -vw all -d src/HDML/defs -o src/HDML",
    "heating":      "ts-node ../meta/src/commandline/projectit all -d src/heating/defs -o src/heating",
    "json": 	    "ts-node ../meta/src/commandline/projectit all -d src/json/defs -o src/json",
    "expressions":  "ts-node ../meta/src/commandline/projectit all -d src/mps-expressions/defs -o src/mps-expressions",
    "octopus": 	    "ts-node ../meta/src/commandline/projectit all -d src/octopus/defs -o src/octopus",
    "openhab":      "ts-node ../meta/src/commandline/projectit -v all -d src/openhab/defs -o src/openhab",
    "pi-languages": "ts-node ../meta/src/commandline/projectit -v all -d src/pi-languages/defs -o src/pi-languages",
    "pi-struc-parser": "pegjs src/pi-languages/parser/gen/PiStructureDefUnitParser.pegjs",
    "pi-edit-parser": "pegjs src/pi-languages/parser/gen/PiEditorDefUnitParser.pegjs",
    "pi-scope-parser": "pegjs src/pi-languages/parser/gen/PiScoperDefUnitParser.pegjs",
    "pi-type-parser": "pegjs src/pi-languages/parser/gen/PiTyperDefUnitParser.pegjs",
    "pi-valid-parser": "pegjs src/pi-languages/parser/gen/PiValidatorDefUnitParser.pegjs",
    "pi-parsers":   "yarn pi-struc-parser && yarn pi-edit-parser && yarn pi-scope-parser && yarn pi-type-parser && yarn pi-valid-parser",
    "taxrules": 	"ts-node ../meta/src/commandline/projectit all -d src/taxrules/defs -o src/taxrules",
    "taxrules-w": 	"ts-node ../meta/src/commandline/projectit -w all -d src/taxrules/defs -o src/taxrules",
    "all-examples": "yarn run calculator && yarn run example && yarn run heating && yarn run json && yarn run expressions && yarn run openhab && yarn run pi-languages && yarn run taxrules",
    "lint":         "tslint -c ./tslint.json './src/**/*.ts*'",
    "pegjs":        "pegjs src/calculator/parser/gen/CalculatorUnitParser.pegjs",
    "clean-config": "rm */*/projectit/ProjectItConfiguration.ts",
    "clean-custom": "rm */*/*/Custom*.ts",
    "clean-init":   "rm */*/*/*Initialization.ts",
    "clean-parser": "rm -r */*/*parse*",
    "clean":        "yarn run clean-config && yarn run clean-custom && yarn run clean-init"
  },
  "devDependencies": {
    "@uifabric/example-data": "^7.0.9",
    "@uifabric/fluent-theme": "^7.1.51",
    "@fluentui/react": "^7.105.13",
    "@fluentui/react-northstar": "^0.47.0",
    "@fluentui/react-icons-northstar": "^0.49.0",
    "@types/pegjs": "^0.10.1",
    "@types/react": "16.8.15",
    "@types/react-dom": "16.8.4",
    "@types/react-router": "^5.1.4",
    "@types/webpack": "^4.39.2",
    "@types/webpack-env": "^1.14.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "html-webpack-plugin": "^3.2.0",
    "mobx-devtools": "^0.9.21",
    "mini-css-extract-plugin": "^0.9.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@projectit/core": "^0.0.5",
    "@projectit/meta": "^0.0.5",
    "@types/lodash": "4.14.73",
    "@types/history": "^4.7.5",
    "global": "^4.4.0",
    "mobx": "^5.14.0",
    "mobx-react": "6.1.3"
  },
  "publishConfig": {
    "access": "private"
  }
}
