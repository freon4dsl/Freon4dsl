editor StartEditor

DemoNumberLiteralExpression {
    [${self.value}]
}


DemoAttribute {
    [ ${self.name} : ${self.declaredType} ]
}

DemoStringLiteralExpression {
        [
        '${self.value}'
        ]
    trigger = "'"
}

DemoIfExpression {
        [
        if (${self.condition}) then
                  ${self.whenTrue}
        else
           ${self.whenFalse}
        endif
        ]

    trigger = "if"
    symbol = "if"
}

