{
  "publishConfig": {
    "access": "public"
  },
  "name": "@freon4dsl/core-svelte",
  "version": "1.1.0-beta.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freon4dsl/Freon4dsl.git"
  },
  "main": "dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "build-dev": "tsc --noEmit && vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",

    "check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
    "clean": "rm -rf node_modules/ && rm -rf dist/",
    "errors-only": "svelte-check --threshold error --tsconfig ./tsconfig.json",
    "format": "prettier --write .",

    "build-release": "npm run build",
    "install-local": "npm install --registry http://localhost:4873",
    "republish-local": "npm run unpublish-local && npm run publish-local",
    "release": "npm publish",
    "publish-local": "npm publish --registry http://localhost:4873",
    "unpublish-local": "npm unpublish --force --registry http://localhost:4873"
    },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@material/web": "^2.3.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.24.0",
    "@sveltejs/package": "^2.4.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "autoprefixer": "^10.4.21",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "publint": "^0.3.12",
    "svelte-check": "^4.2.2",
    "@freon/test-helpers": "1.1.0-beta.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@material/web": "^2.3.0",
    "@material/slider": "^14.0.0",
    "@material/switch": "^14.0.0",
    "@freon4dsl/core": "1.1.0-beta.3"
  }
}
